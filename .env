# Configurações da Aplicação - Etapa 3: Database Integration
APP_PORT=8080
RUST_ENV=development

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/actix_crud_db
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1
DB_CONNECT_TIMEOUT=30
DB_IDLE_TIMEOUT=600

# SQLx Configuration
SQLX_OFFLINE=false

# Configurações de Autenticação JWT (será usado na Etapa 5)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400

# Configurações de Logging
RUST_LOG=actix_api_crud=debug,actix_web=info,sqlx=debug
